/* 富文本 */

.xboxdemo-rich-text {
  display: block;
  padding: 15px;
  font-size: 12px;
  line-height: 22px;
}

/* 行 */

.xboxdemo-line-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

/* 图标 */

.xboxdemo-line-icon {
  margin-right: 10px;
  width: 20px;
  height: 20px;
  vertical-align: middle;
}

/* 标签 */

.xboxdemo-news-label {
  font-size: 18px;
  line-height: 18px;
  padding: 15px;
  background: #eee;
}

/* 咨询项 */

.xboxdemo-news-item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

/* 图片 */

.xboxdemo-news-item-img {
  width: 100px;
  height: 60px;
}

/* 右侧 */

.xboxdemo-news-item-right {
  margin-left: 10px;
}

.xboxdemo-news-item-title {
  font-size: 18px;
  line-height: 18px;
}

.xboxdemo-news-item-row2 {
  margin-top: 10px;
  color: #999;
  font-size: 14px;
}
